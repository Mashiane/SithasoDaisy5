	If mElement = Null Then Return
	If s <> "" Then UI.AddAttr(mElement, "data-content", s)
End Sub
'set Icon
Sub setIcon(s As String)
	sIcon = s
	CustProps.put("Icon", s)
	If mElement = Null Then Return
	If s = "" Then
		UI.RemoveElementByID($"${mName}_icon"$)
		Return
	End If
	UI.SetTextByID($"${mName}_icon"$, s)
	UI.SetVisibleByID($"${mName}_icon"$, True)
End Sub
