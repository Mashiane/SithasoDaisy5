'code to design the view
Public Sub DesignerCreateView (Target As BANanoElement, Props As Map)
	mTarget = Target
	If Props <> Null Then
		CustProps = Props
		UI.SetProps(Props)
		'UI.ExcludeBackgroundColor = True
		'UI.ExcludeTextColor = True
		'UI.ExcludeVisible = True
		'UI.ExcludeEnabled = True
		sColor = Props.GetDefault("Color", "none")
		sColor = modSD5.CStr(sColor)
		If sColor = "none" Then sColor = ""
		sDataContent = Props.GetDefault("DataContent", "")
		sDataContent = modSD5.CStr(sDataContent)
		sIcon = Props.GetDefault("Icon", "")
		sIcon = modSD5.CStr(sIcon)
	End If
	'
	UI.AddClassDT("step")
	If sColor <> "" Then UI.AddColorDT("step", sColor)
	If sDataContent <> "" Then UI.AddAttrDT("data-content", sDataContent)
	Dim xattrs As String = UI.BuildExAttributes
	Dim xstyles As String = UI.BuildExStyle
	Dim xclasses As String = UI.BuildExClass
	If sParentID <> "" Then
		'does the parent exist
		If BANano.Exists($"#${sParentID}"$) = False Then
			BANano.Throw($"${mName}.DesignerCreateView: '${sParentID}' parent does not exist!"$)
			Return
		End If
		mTarget.Initialize($"#${sParentID}"$)
	End If
	mElement = mTarget.Append($"[BANCLEAN]	
	<li id="${mName}" class="${xclasses}" ${xattrs} style="${xstyles}">
		<span id="${mName}_icon" class="step-icon hidden">${sIcon}</span>
		<span id="${mName}_text">${sText}</span>
	</li>"$).Get("#" & mName)
	setIcon(sIcon)
End Sub

